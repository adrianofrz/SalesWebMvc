@model IEnumerable<SalesWebMvc.Models.Advice>
@{
    ViewData["Title"] = "Advice";
}

<h2>@ViewData["Title"]</h2>

@*<p>
    <a asp-action="Create" class="btn btn-default">Create New</a>
</p>*@

<table class="table table-striped table-hover">

    <tbody>
        <tr>
            <td>
                @Html.DisplayNameFor(modelItem => modelItem.Id)
            </td>
            <td>
                @Html.DisplayNameFor(modelItem => modelItem.advice)
            </td>
        </tr>
    </tbody>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.advice)
                </td>
              
            </tr>
        }
    </tbody>
</table>

